{
	"$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
	"files": {
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.css",
			"**/*.json",
			"**/*.jsonc",
			"!.devcontainer",
			"!.vscode",
			"!.wrangler",
			"!dist",
			"!node_modules",
			"!e2e/.reqports"
		]
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	}
}
